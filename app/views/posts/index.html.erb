<h1>Listing posts</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Title</th>
    <th>Content</th>    
    <th>View</th>        
  </tr>
   
<% for post in @recentPosts %>
  <tr>
    <!--<td><% for foo in post.methods %><%= foo %><br/><% end %></td>-->
    <td><%=h post.id %> : </td>
    <td><%=h post.title %> : </td>
    <td><%= post.content %></td>
    <td><%= link_to 'Show', post %></td>
    <!--<td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>-->
  </tr>
<% end %>
</table>

